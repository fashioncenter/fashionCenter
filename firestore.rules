rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow admin registration initially
    match /admins/{adminId} {
      allow read, write: if true;  // Temporarily allow all access for initial setup
    }
    
    // Test collection for debugging
    match /debug_test/{docId} {
      allow read, write: if true;
    }
    
    // Orders collection
    match /orders/{orderId} {
      allow read: if true;  // Allow read for now, restrict later
      allow write: if true; // Allow write for now, restrict later
    }

    // Products collection
    match /products/{productId} {
      allow read: if true;  // Allow public read access to products
      allow write: if true; // Temporarily allow write access, should be restricted to admins later
    }

    // Product images collection
    match /product_images/{imageId} {
      allow read: if true;  // Allow public read access to product images
      allow write: if true; // Temporarily allow write access, should be restricted to admins later
    }
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 